<%- include ('../partials/header'); %>
    <h1><%= title %></h1>
    <div class="container homepage">
        
   
              

        <div class="board"> 

            <% data.forEach((item) => { %>
                <div class="col-sm">
  
                    <p class="title">
                        <a href="/stories/<%= item._id %>" style="color: black"><%= 'Title: ' + item.title %></a>
                    </p>
                    <p class="date">
                        <%= 'Created on: ' + item.created_at.toDateString() %>
                    </p>
<!-- 
                    <p>
                        <%= userdata %>
                    </p> -->

                    <% let name = userdata.find(user => user._id == item.created_by) %>
                    <p class="name">
                        <%= 'Created by: ' +  name.first_name %>
                    </p>


                    </div>
            <% }) %>





        </div>



    </div>


<%- include ('../partials/footer'); %>
    