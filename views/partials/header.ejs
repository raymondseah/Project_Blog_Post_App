<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css"

  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <a class="navbar-brand" href="#"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/stories">Home <span class="sr-only">(current)</span></a>
          </li>

          <% if (user !== null) { %>
          <li class="nav-item">
            <a class="nav-link" href="/stories/new">New Story</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/dashboard">Dashboard</a>
          </li>
          <% } %>
          
          <li class="nav-item">
            <a class="nav-link" href="/info">About Us</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">

          <% if (user === null) { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/register">Register</a>
          </li>
          <% } else { %>
          <li class="nav-item">
            <form method="POST" action="/users/logout">
              <button type="submit" class="btn nav-link" style="border: 0;">Logout</button>
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </nav>
    <div class="side-bar">
      
      <img src="/images/menu.png" class="menu">
      
      <div class="social-links">
        <img src="/images/fb.png">
        <img src="/images/ig.png"> 
        <img src="/images/tw.png">
      </div>

      <div class="useful-links">
        <img src="/images/info.png">
        <img src="/images/share.png">
      </div>

    </div>

    <div class="bubbles">
      <img src="/images/bubble.png">
      <img src="/images/bubble.png">
      <img src="/images/bubble.png">
      <img src="/images/bubble.png">
      <img src="/images/bubble.png">
      <img src="/images/bubble.png">
      <img src="/images/bubble.png">
    </div>



    

